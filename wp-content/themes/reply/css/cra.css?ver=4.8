/* Shapes
 */
.cra-section .cra-section-geometry {
	font-size: 72px;
	position: relative;
	bottom: 15px;
}

@media (min-width: 993px) {
	.cra-section .cra-section-geometry {
		text-align: right;
	}
	
	.cra-section .cra-section-geometry span {
		position: absolute;
		z-index: 11;
		top: 0;
		bottom: 0;
		left: 0;
		right: 0;
		margin: auto;
	}
}

.cra-section .cra-section-geometry .figure {
	position: absolute;
	left: 150px;
    top: -100px;
	z-index: 10;
	width: 300px;
	height: 300px;
	animation: rotate 40s infinite linear;
	stroke-width: 0.2px;
	filter: alpha(opacity=40);
	-webkit-opacity: 0.4;
	-khtml-opacity: 0.4;
	-moz-opacity: 0.4;
	-o-opacity: 0.4;
	opacity: 0.4;
}

@media (max-width: 992px) {
	.cra-section .cra-section-geometry .figure {
		left: 0;
		right: 0;
		margin: 0 auto;
	}
}

.figure #circle { fill: none; stroke: none; }
.figure.offcenter #offcenter { fill: #fcfff9; stroke: #99ed48; }
.figure.triangle #triangle { fill: #f4f8ff; stroke: #4891ff; }
.figure.pentagon #pentagon { fill: #fffcf0; stroke: #ffd735; }
.figure.square #square { fill: #faf5ff; stroke: #b473ec; }
.figure.pill #pill { fill: #fff5f8; stroke: #fe3e6d; }
.figure.hexagon #hexagon { fill: #f0feff; stroke: #19dde4; }

.cra-section .cra-section-geometry.circle {
	color: #aeec73;
}

.cra-section .cra-section-geometry.triangle {
	color: #61bfef;
}

.cra-section .cra-section-geometry.pentagon {
	color: #ffd735;
}

.cra-section .cra-section-geometry.square {
	color: #b473ec;
}

.cra-section .cra-section-geometry.oval {
	color: #fe3e6d;
}

.cra-section .cra-section-geometry.hexagon {
	color: #19dde4;
}

