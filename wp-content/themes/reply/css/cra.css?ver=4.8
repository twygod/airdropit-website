body {
	color: #1e1e1e; /* title color */
	font-family: museo-sans, sans-serif;
}

a,
button,
input[type="submit"] {
	-webkit-transition: background 0.15s;
	-moz-transition: background 0.15s;
	-ms-transition: background 0.15s;
	-o-transition: background 0.15s;
	transition: background 0.15s;
}

button:disabled,
input[disabled] {
	filter: alpha(opacity=50);
	-webkit-opacity: 0.5;
	-khtml-opacity: 0.5;
	-moz-opacity: 0.5;
	-o-opacity: 0.5;
	opacity: 0.5;
}

input,
button,
.iam-button {
	outline: none !important;
	border: none;
}

@media (max-width: 992px) {
	input {
		text-align: center;
		margin-bottom: 15px;
	}
}

.img-responsive {
	margin: 0 auto;
}

.modal-body {
	overflow: hidden;
}

@media (max-width: 767px) {
	iframe {
		width: 100% !important;
		max-width: 100% !important;
	}
}

.modal-close,
.modal-close:visited {
    position: absolute;
    top: -22px;
    right: -22px;
    font-size: 22px;
    color: rgba(255, 255, 255, 0.5) !important;
}

.modal-close:hover {
    color: rgba(255, 255, 255, 0.8) !important;
}

@-webkit-keyframes rotate {
    0% {
		-webkit-transform: rotate(0deg);
	} 
    100% {
		-webkit-transform: rotate(360deg);
	}
}
@-moz-keyframes rotate {
    0% {
		-moz-transform: rotate(0deg);
	} 
    100% {
		-moz-transform: rotate(360deg);
	}
}
@-ms-keyframes rotate {
    0% {
		-ms-transform: rotate(0deg);
	} 
    100% {
		-ms-transform: rotate(360deg);
	}
}
@-o-keyframes rotate {
    0% {
		-o-transform: rotate(0deg);
	} 
    100% {
		-o-transform: rotate(360deg);
	}
}
@keyframes rotate {
    0% {
		transform: rotate(0deg);
	} 
    100% {
		transform: rotate(360deg);
	}
}

.anim-rotate {
	-webkit-animation: rotate 40s infinite linear;
	-moz-animation: rotate 40s infinite linear;
	-ms-animation: rotate 40s infinite linear;
	animation: rotate 40s infinite linear;
}

.anim-rotate-2x {
	-webkit-animation: rotate 7s infinite linear;
	-moz-animation: rotate 7s infinite linear;
	-ms-animation: rotate 7s infinite linear;
	animation: rotate 7s infinite linear;
}

/* Head
 */
.cra-head {
	position: relative;
	background: #e3f0ff;
	padding-bottom: 145px;
}

.cra-head:after {
	content: '';
	position: absolute;
	background: #e3f0ff;
    z-index: -1;
    height: 100%;
    left: 0;
    right: 0;
    bottom: 0;
    -webkit-transform: skewY(-6deg);
	-moz-transform: skewY(-6deg);
	-ms-transform: skewY(-6deg);
	-o-transform: skewY(-6deg);
	transform: skewY(-6deg);
	-webkit-transform-origin: 100%;
	-moz-transform-origin: 100%;
	-ms-transform-origin: 100%;
	-o-transform-origin: 100%;
	transform-origin: 100%;
}

.cra-head-floater {
	position: relative;
	top: -105px;
}

.cra-head-floater .learn-more {
	margin-top: 45px;
	text-transform: uppercase;
	font-size: 13px;
	color: #a9a9a9;
	font-weight: 600;
    letter-spacing: 1px;
}

.cra-head-floater .learn-more .symbol {
    margin-right: 7px;
    font-size: 16px;
    border: 2px solid #a9a9a9;
	-webkit-border-radius: 9px;
	-moz-border-radius: 9px;
	border-radius: 9px;
    padding: 2px 4px 2px 5px;
}

.cra-head-top {
	margin-top: 30px;
}

.cra-head-top a {
	color: #1f8ded;
	font-size: 30px;
}

.cra-head-top .share a {
	font-size: 20px;
	margin-right: 20px;
}

.cra-head-top .share a:hover {
	color: #4dacff;
}

.cra-head-top .share a:last-of-type {
	margin-right: 0;
}

.cra-head-title {
	margin-top: 40px;
	font-size: 36px;
	font-weight: 500;
}

.cra-head-desc {
	width: 500px;
	margin-left: auto;
	margin-right: auto;
	margin-top: 20px;
	color: #4c4c4c;
	font-size: 18px;
	font-weight: 300;
}

.cra-head-desc.wide {
	width: 580px;
}

@media (max-width: 767px) {
	.cra-head-desc {
		width: 100% !important;
	}
}

.cra-head-video {
	margin-top: 60px;
}

.cra-head-video .video-link {
	padding: 16px 46px;
	-webkit-border-radius: 30px;
	-moz-border-radius: 30px;
	border-radius: 30px;
	background: #00c2e9;
	color: #ffffff;
	text-transform: uppercase;
}

.cra-head-video .video-link:hover {
	background: #3edfff
}

.cra-head-video .video-link i {
    font-size: 26px;
    position: relative;
    top: 4px;
	margin-right: 5px;
}

